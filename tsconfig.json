{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "lib": ["DOM", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["eslint.config.mjs", "homebridge-ui", "src"]
}
